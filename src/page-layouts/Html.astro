---
import { ClientRouter } from 'astro:transitions'
import type { MetaData } from 'types/meta-data'

type Props = MetaData & {
  metaUrl: string
  metaFavicon?: string
}

const { metaTitle, metaDescription, metaUrl, metaImage, metaFavicon } =
  Astro.props
---

<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, interactive-widget=resizes-content"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="msapplication-tap-highlight" content="no" />

    <meta name="theme-color" content="#000" />

    <!-- General Meta Tags -->
    <title>{metaTitle}</title>
    <link rel="icon" href={metaFavicon} />
    <meta name="description" content={metaDescription} />

    <!-- Open Graph Meta Tags -->
    <meta name="og:type" content="website" />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={metaImage} />
    <meta property="og:url" content={metaUrl} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={metaImage} />

    <ClientRouter />

    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
